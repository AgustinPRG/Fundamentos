#include <iostream>
using namespace std;

int main()
{
    int opcion;
    float a,b,r;
    cout<<"Ingrese el dato a: "<<endl;
    cin>>a;
    cout<<"Ingrese el dato b: "<<endl;
    cin>>b;
    cout<<"Menu"<<endl;
    cout<<"1.suma"<<endl;
    cout<<"2.resta"<<endl;
    cout<<"3.multiplicacion"<<endl;
    cout<<"4.division"<<endl;
    cout<<"Elige una opcion: "<<endl;
    cin>>opcion;
    switch (opcion)
    {
        case 1:r=a+b;break;
        case 2:r=a-b;break;
        case 3:r=a*b;break;
        case 4:r=a/b;break;
    default: cout<<"***Opcion invalida***"<<endl;
    }
    cout<<"El resultado es: "<<r;
    
    return 0;
}
